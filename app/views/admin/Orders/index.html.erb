<div id="orders_header">
  <h1>Orders</h1>
</div>
<%= render "shared/back_button" %>



<div class="status-row">
  <% sort_status = %w(#paid #cancelled #ordered #complete) %>
  <% sort_status.each do |status| %>
  <a class="btn" href="<%= status %>">
    <i class="fa fa-sort-desc fa-3x"><br>
    </i>  <%= status %></a>
  <% end %>
</div>

<div id="admin-order-table">
<h4> Completed </h4>
  <table class='table table-bordered'>
    <thead>
      <tr>
        <th data-field='Order Number'> Order Number </th>
        <th data-field='Total Cost'>Total Cost</th>
        <th data-field='Order Status'>Order Status</th>
        <th data-field='time'>Submitted At</th>
      </tr>
    </thead>
    <% Order.complete.each do |order| %>
      <div id="completed">
        <%= render partial: "shared/status_table", :locals => {order: order}%>
      </div>
    <% end %>
  </table>
</div>


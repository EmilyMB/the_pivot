<div id="categories_header">
  <h1>Categories</h1>
</div>
<%= render "shared/category_row" %>
<% @categories.each do |category| %>
  <p><%= category.name %></p>
<% end %>
<div class="row">
  <div class="col-lg-8 col-lg-offset-2">
    <div class="category">
      <h4 class="form-title"> Create New Category </h4>
      <%= form_for(:categories, placeholder: "category",  url: admin_categories_path) do |f| %>
        <p><%= f.text_field :name, class: "form-control"  %></p>
        <p class="text-center"><%= f.submit "Add Category", class: "btn btn-info" %></p>
      <% end %>
    </div>
  </div>
</div>

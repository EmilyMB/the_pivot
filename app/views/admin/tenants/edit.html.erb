<h1>Edit Tenant</h1>

<div id ="edit" class="col-md-4 col-md-offset-4">
  <%= form_for [:admin, @tenant], url: admin_tenant_path(@tenant) do |f| %>
    <%= f.text_field :organization  %></br>
    <%= f.label :organization %></br>

    <%= f.text_field :location %></br>
    <%= f.label :location %></br>

    <%= f.check_box :approved %>
    <div id="approved_checkbox">
      <%= f.label "Tenant Approved?" %>
    </div>

    <%= f.check_box :active %>
    <div id="active_checkbox">
      <%= f.label "Tenant Active?" %>
    </div>

    <p><%= f.submit "Update Tenant" %></p>
  <% end %>

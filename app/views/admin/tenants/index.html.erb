<div id="tenants_header">
  <h1>Tenants</h1>
</div>
<div id="unapproved">
  <h2>Unapproved Tenants</h2>
  <table style="width:100%">
    <tr>
      <th>Organization</th>
      <th>Location</th>
      <th>Slug</th>
    </tr>

    <% if @unapproved %>
      <% @unapproved.each do |tenant| %>
        <tr>
          <td><%= tenant.organization %></td>
          <td><%= tenant.location %></td>
          <td><%= tenant.slug %></td>
          <td><%= link_to "EDIT", edit_admin_tenant_path(tenant.id) %></td>
        </tr>
      <% end %>
    <% else %>
      None
    <% end %>
  </table>
</div>

<div id="alert">
  <%= flash[:alert] %>
</div>

<h1>Order History</h1>

<div id="history">
  <table class='table table-bordered'>
    <thead>
      <tr>
        <th data-field='Order Number'> Item </th>
        <th data-field='Quantity'>Quantity</th>
        <th data-field="Price">Price</th>
        <th data-field='Subtotal'>Subtotal</th>
        <th data-field='Order Status'>Order Status</th>
        <th data-field='time'>Submitted At</th>
      </tr>
    </thead>
    <% @order.items.each do |item| %>
      <tr>
        <td><%= item.title %></td>
        <td><%= 'needs to be fixed' %></td>
        <td><%= item.price %></td>
        <td>'needs to be fixed'</td>
        <td><%= @order.status %></td>
        <td>'needs to be fixed'</td>
      </tr>
    <% end %>
  </table>
</div>

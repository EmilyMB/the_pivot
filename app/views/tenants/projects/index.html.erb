<div id="title">
  <h1><%= @tenant.organization.upcase %></h1>

  <div class="row">
    <% @tenant.projects.each do |project| %>
      <div class="box col-lg-3">
        <h4 class="project-title"> <%= link_to("#{project.title}", project_path(tenant: @tenant.slug, id: project.id))%></h4>
        <div class="thumbnail">
          <img src="http://upload.wikimedia.org/wikipedia/commons/4/4d/Cat_November_2010-1a.jpg">
        </div>
        <h5 class="project-desc"><%= project.description %></h5>
        <% project.categories.each do |category| %>
          <div class="project-category"><%= category.name %></div>
        <% end %>
        <%= form_for :pending_loan, url: carts_path do |f| %>
          <%= f.hidden_field :project_id, value: project.id %>
          <%= f.select(:loan_amount) do %>
            <% [["$25", 25], ["$50", 50], ["$100", 100], ["$500", 500]].each do |amount| %>
              <%= content_tag(:option, amount.first, value: amount.last) %>
            <% end %>
          <% end %>
          <%= f.submit 'Lend', class: "btn btn-default" %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>

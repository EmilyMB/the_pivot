<h1><%= @project.tenant.organization %></h1>

<h2>
  <%= @project.tenant.location %>
  <% @project.categories.each do |category| %>
    <%= "|#{category.name}" %>
  <% end %>
</h2>

<div id="title"><h1><%= @project.title %></h1></div>


<%= render "shared/back_button" %>
<%= div_for(@project, class: "photo") do %>
  <%= image_tag @project.photos.first.image.url %>
<% end %>

<h2><%= "RETIRED ITEM" if @project.retired %></h2>
<div id="description"><%= @project.description %></div>
<div id="price"><%= number_to_currency @project.price / 100 %></div>

<% unless @project.retired %>
  <%= form_for :cart, url: pending_loan_path do |f| %>
    <%= f.hidden_field :project_id, value: @project.id %>
    <%= f.select :quantity, options_for_select((1..10))%>
    <%= f.submit 'Add to Cart', class: "btn btn-default add-cart"%>
  <% end %>
<% end %>
<h4><%= @project.tenant.organization %>, <%= @project.tenant.location %></h4>
<h4><% @project.categories.each do |category| %>
  <div class="project-category">
    <%= link_to "#{category.name}", projects_path %>
  </div>
<% end %></h4>

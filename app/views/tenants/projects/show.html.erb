<div id="title"><h1><%= @project.title %></h1></div>

<div class="row text-center">
  <div class="col-md-4">
    <%= div_for(@project, class: "photo") do %>
      <%= image_tag @project.image_url %>
    <% end %>
  </div>
  <div class="col-md-4 col-md-offset-3">
    <table class="table table-bordered">
      <tr>
        <td>Amount Needed</td><td><%= number_to_currency @project.price / 100.00 %></td>
      </tr>
      <tr>
        <td>Repayment Rate</td><td><%= @project.repayment_rate %> %</td>
      </tr>
      <tr>
        <td>Requested By</td><td><%= @project.requested_by %> </td>
      </tr>
      <tr>
        <td>Repayments Begin</td><td><%= @project.repayment_begin %> </td>
      </tr>
    </table>
  <div class="row text-center">
    <%= render 'shared/lend_button', project: @project %>
  </div>
  </div>
</div>

<div id="Project Information">

  <h2><%= "RETIRED ITEM" if @project.retired %></h2>
  <table class="table table-bordered">
    <tr>
      <td>Project Description</td><td><%=  @project.description %></td>
    </tr>

  </table>
</div>
<div class="links text-center lead">
  <h4> <%= link_to "Other Projects from this Borrower", tenant_projects_path(@project.tenant.slug) %> |
    <%= link_to "Other Projects at this Location", projects_path(category: @project.categories) %></h4>
</div>

